<p id="notice"><%= notice %></p>

<h1>製品</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th width="150px">画像</th>
      <th width="20%">商品名</th>
      <th width="10%">値段</th>
      <th style="max-width: 150px">もっと見る</th>
      <th style="max-width: 300px">詳細</th>
      <!-- <th>Selling</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag(right_url(product.image_url), size: 150) %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <!-- <td><%#= product.selling %></td> -->
        <td><%= link_to 'もっと見る', product.code, style: 'text-overflow: ellipsis; color: #337ab7;max-width: 150px', title: product.code %></td>
        <td style= 'text-overflow: ellipsis; max-width: 300px'><%= product.description %></td>
        <td class="btn-icon">
          <%= link_to product do %>
            <span class="fa fa-bars"></span>
          <% end %>
          <%= link_to edit_product_path(product) do %>
            <span class="fa fa-pen"></span>
          <% end %>
          <%= link_to product, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="fa fa-trash"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div style="float: right">
  <span>Showing 1 to 10 of <%= @pagy.count %> entries</span>
  <%== pagy_nav(@pagy) %>
</div>
<br>

